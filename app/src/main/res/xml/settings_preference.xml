<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:summary="连接设置"
        />
    <CheckBoxPreference
        android:key="is_connect_remote_server"
        android:title="连接远程服务器"
        android:summaryOn="开启"
        android:summaryOff="关闭"
        />
    <EditTextPreference
        android:key="server_ip"
        android:title="服务器"
        android:dialogTitle="输入服务器IP地址"
        android:dialogMessage="格式为 xxx.xxx.xxx.xxx"
        android:summary="0.0.0.0"/>

</PreferenceScreen>